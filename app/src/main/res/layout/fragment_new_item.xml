<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.new_item.NewItemsFragment">

    <ImageView
        android:id="@+id/image_view"
        android:layout_width="fill_parent"
        android:layout_height="150dp"
        android:contentDescription="@string/content_image_of_item_to_sell"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_menu_camera" />


    <EditText
        android:id="@+id/input_item_name"
        android:layout_width="250dp"
        android:layout_height="38dp"
        android:layout_marginTop="32dp"
        android:autofillHints=""
        android:background="@android:drawable/divider_horizontal_textfield"
        android:ems="10"
        android:hint="@string/text_item_name"
        android:inputType="textPersonName"
        android:textColor="#FFFFFF"
        android:textColorHint="#123550"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/image_view" />

    <EditText
        android:id="@+id/input_item_price"
        android:layout_width="250dp"
        android:layout_height="38dp"
        android:layout_marginTop="32dp"
        android:autofillHints=""
        android:background="@android:drawable/divider_horizontal_textfield"
        android:ems="10"
        android:hint="@string/text_item_price"
        android:inputType="numberSigned"
        android:textColor="#FFFFFF"
        android:textColorHint="#123550"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/input_item_name" />

    <EditText
        android:id="@+id/input_item_description"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:autofillHints=""
        android:background="@android:drawable/divider_horizontal_textfield"
        android:ems="10"
        android:gravity="start|top"
        android:hint="@string/text__item_description"
        android:inputType="textMultiLine"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:textColor="#FFFFFF"
        android:textColorHint="#123550"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/input_item_price" />

    <Button
        android:id="@+id/button_add_item"
        style="@style/button"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="@string/text_create_item"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/input_item_description" />

</androidx.constraintlayout.widget.ConstraintLayout>